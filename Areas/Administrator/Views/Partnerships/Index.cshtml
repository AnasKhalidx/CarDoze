@model IEnumerable<CarDoze.Areas.Administrator.ViewModels.PartnershipViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/_Layout2.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Partnership Index</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TypeShipp)</th>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TypeShipp)</td>
                        <td><img src="@item.Logo" alt="Partnership Logo" class="img-fluid" style="width: 100px; height: auto;" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a href="/Partnership/Edit/@item.PartnershipID" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Partnership/Delete/@item.PartnershipID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No partnerships found.</p>
    }
</div>
