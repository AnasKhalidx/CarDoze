@model IEnumerable<CarDoze.Areas.Administrator.ViewModels.CompanyViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/_Layout2.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Companies</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-auto">
                            <img src="@item.Logo" class="img-fluid" alt="Company Logo" style="width: 100px; height: auto;">
                        </div>
                        <div class="col">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">
                                    <strong>Location:</strong> @item.Location<br />
                                    <strong>Description:</strong> @item.Description<br />
                                    <strong>Partnership Type:</strong> @item.Partnerships.TypeShipp
                                </p>
                            </div>
                        </div>
                        <div class="col-auto align-self-center">
                            <div class="btn-group-vertical">
                                <a href="/Companies/Edit/@item.CompanyID" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/Companies/Delete/@item.CompanyID" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
