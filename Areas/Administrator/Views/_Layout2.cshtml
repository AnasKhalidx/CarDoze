<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarDoze</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for links and hover effects */
        .navbar-light .navbar-nav .nav-link {
            color: white;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #dc3545; /* Darker red for hover effect */
            }

            .navbar-light .navbar-nav .nav-link.active {
                color: #dc3545; /* Darker red for active link */
            }

        .footer a {
            color: white;
        }

            .footer a:hover {
                color: #dc3545;
            }

        .btn-white {
            background-color: white;
            color: white;
            border-color: red;
        }

            .btn-white:hover {
                background-color: red;
                color: white;
                border-color: red;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="Administrator" asp-controller="Cars" asp-action="Index">CarDoze</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="CarFeatures" asp-action="Index">Car Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Cars" asp-action="Index">Cars</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Partnerships" asp-action="Index">Partnerships</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Companies" asp-action="Index">Companies</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Reviews" asp-action="ReviewList">Review List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Reviews" asp-action="AllReviewList">AllReviewList</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Administrator" asp-controller="Orders" asp-action="Index">Orders List</a>
                        </li>
                    </ul>
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - CarDoze - All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
