@model CarDoze.Areas.Administrator.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Areas/Administrator/Views/_Layout2.cshtml";
}

<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarID" />

    <div class="form-group">
        <label asp-for="Manufacturer.ManufacturerID" class="control-label">Manufacturer</label>
        <select asp-for="Manufacturer.ManufacturerID" class="form-control" id="ManufacturerID">
            <option value="">Select Manufacturer</option>
            @foreach (var manufacturer in ViewBag.Manufacturers)
            {
                <option value="@manufacturer.Value">@manufacturer.Text</option>
            }
        </select>
        <span asp-validation-for="Manufacturer.ManufacturerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModelID" class="control-label">Model</label>
        <select asp-for="ModelID" class="form-control" id="ModelID">
            <option value="">Select Model</option>
        </select>
        <span asp-validation-for="ModelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FuelType" class="control-label"></label>
        <input asp-for="FuelType" class="form-control" />
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageURLs" class="control-label">Image URLs</label>
        <div id="image-urls-container">
            @for (int i = 0; i < Model.ImageURLs.Count; i++)
            {
                <div class="input-group mb-2">
                    <input type="text" asp-for="ImageURLs[i]" class="form-control" />
                    <div class="input-group-append">
                        <button class="btn btn-danger" type="button" onclick="removeImageUrlField(this)">Remove</button>
                    </div>
                </div>
            }
        </div>
        <button type="button" class="btn btn-info" onclick="addImageUrlField()">Add Image URL</button>
        <span asp-validation-for="ImageURLs" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Car Features</label>
        <div id="featureList">
            @foreach (var feature in Model.CarFeatures)
            {
                <div class="input-group mb-3">
                    <select name="Features" class="form-control feature-dropdown">
                        <option value="@feature.FeatureID" selected>@feature.FeatureName</option>
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-danger" type="button" onclick="$(this).closest('.input-group').remove();">Remove</button>
                    </div>
                </div>
            }
        </div>
        <button type="button" id="addFeature" class="btn btn-info">Add Feature</button>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var manufacturerId = $('#ManufacturerID').val();
            if (manufacturerId) {
                loadModels(manufacturerId);
            }

            $('#ManufacturerID').change(function () {
                var manufacturerId = $(this).val();
                $('#ModelID').empty().append('<option value="">Select Model</option>');

                if (manufacturerId) {
                    loadModels(manufacturerId);
                }
            });

            function loadModels(manufacturerId) {
                $.getJSON('/Cars/GetModelsByManufacturer/' + manufacturerId, function (data) {
                    $.each(data, function (index, item) {
                        $('#ModelID').append('<option value="' + item.modelsID + '">' + item.modelName + '</option>');
                    });
                });
            }

            $('#addFeature').click(function () {
                var features = @Html.Raw(Json.Serialize(ViewBag.CarFeatureIDs));
                var featureOptions = features.map(f => `<option value="${f.value}">${f.text}</option>`).join('');

                $('#featureList').append(`
                                    <div class="input-group mb-3">
                                        <select name="Features" class="form-control feature-dropdown">
                                            ${featureOptions}
                                        </select>
                                        <div class="input-group-append">
                                            <button class="btn btn-danger" type="button" onclick="$(this).closest('.input-group').remove();">Remove</button>
                                        </div>
                                    </div>
                                `);
            });

            $('#featureList').on('click', '.btn-danger', function () {
                var featureId = $(this).closest('.input-group').find('select').val();
                $('<input>').attr({
                    type: 'hidden',
                    name: 'RemovedFeatures',
                    value: featureId
                }).appendTo('form');
                $(this).closest('.input-group').remove();
            });
        });

        function addImageUrlField() {
            var container = document.getElementById('image-urls-container');
            var index = container.children.length;
            var inputGroup = document.createElement('div');
            inputGroup.className = 'input-group mb-2';
            var input = document.createElement('input');
            input.type = 'text';
            input.name = 'ImageURLs[' + index + ']';
            input.className = 'form-control';
            var inputGroupAppend = document.createElement('div');
            inputGroupAppend.className = 'input-group-append';
            var removeButton = document.createElement('button');
            removeButton.className = 'btn btn-danger';
            removeButton.type = 'button';
            removeButton.innerText = 'Remove';
            removeButton.onclick = function () {
                removeImageUrlField(this);
            };
            inputGroupAppend.appendChild(removeButton);
            inputGroup.appendChild(input);
            inputGroup.appendChild(inputGroupAppend);
            container.appendChild(inputGroup);
        }

        function removeImageUrlField(button) {
            var container = document.getElementById('image-urls-container');
            container.removeChild(button.closest('.input-group'));
        }
    </script>
}
