@model IEnumerable<CarDoze.Areas.Administrator.ViewModels.CarFeatureViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/_Layout2.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Car Features</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FeatureName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FeatureName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CarFeatureID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CarFeatureID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
