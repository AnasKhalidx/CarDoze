@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/css/styles.css">

    <title>Create Account - CARDOZE</title>
</head>
<body>
    <section id="register" class="login-section">
        <div class="login">
            <img src="~/assets/images/welcome-hero/PORSCHE-911-GT3RS-scaled.jpg" alt="register image" class="login__img">

            <form id="register-form" class="login__form" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <h1 class="login__title">@ViewData["Title"]</h1>

                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="login__content">
                    <div class="login__box">
                        <i class="ri-user-3-line login__icon"></i>

                        <div class="login__box-input">
                            <input asp-for="Input.Email" type="email" required class="login__input" id="register-email" placeholder=" ">
                            <label for="register-email" class="login__label">Email</label>
                        </div>
                    </div>

                    <div class="login__box">
                        <i class="ri-lock-2-line login__icon"></i>

                        <div class="login__box-input">
                            <input asp-for="Input.Password" type="password" required class="login__input" id="register-password" placeholder=" ">
                            <label for="register-password" class="login__label">Password</label>
                        </div>
                    </div>

                    <div class="login__box">
                        <i class="ri-lock-2-line login__icon"></i>

                        <div class="login__box-input">
                            <input asp-for="Input.ConfirmPassword" type="password" required class="login__input" id="register-confirm-password" placeholder=" ">
                            <label for="register-confirm-password" class="login__label">Confirm Password</label>
                        </div>
                    </div>



                    <div class="login__box-input">
                        <input asp-for="Input.Email" type="Code OTP" required class="login__input" id="register-email" placeholder="Code ">
                        <label for="register-email" class="login__label">Confrim Code Recieved</label>
                    </div>
                </div>

                <button type="submit" class="login__button">Register</button>

                <p class="login__register">
                    Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                </p>
            </form>
        </div>
    </section>

    <!--=============== MAIN JS ===============-->
    <script>
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
