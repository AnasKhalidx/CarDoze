@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/css/styles.css">

    <title>Forgot Password - CARDOZE</title>
</head>
<body>

    <section id="forgot-password" class="login-section">
        <div class="login">
            <img src="~/assets/images/welcome-hero/PORSCHE-911-GT3RS-scaled.jpg" alt="forgot password image" class="login__img">

            <form id="forgot-password-form" class="login__form" method="post">
                <h1 class="login__title">Forgot Password</h1>

                <div class="login__content">
                    <div class="login__box">
                        <i class="ri-mail-line login__icon"></i>

                        <div class="login__box-input">
                            <input asp-for="Input.Email" type="email" required class="login__input" id="forgot-email" placeholder=" ">
                            <label for="forgot-email" class="login__label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="login__button">Send Reset Link</button>
                </div>

                <div class="form-group text-center">
                    <a asp-page="./Login" class="login__forgot">Back to login</a>
                </div>
            </form>
        </div>
    </section>

    <!--=============== MAIN JS ===============-->
    <script>
        
    </script>
</body>
</html>
